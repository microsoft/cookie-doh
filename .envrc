# get path to the root of the project even if deep into the path
export PROJECT_PATH=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

# add bin directory to the path
export PATH="${PROJECT_PATH}/bin:$PATH"

# configure W&B's default log directory
export WANDB_DIR=".tmp/wandb"
