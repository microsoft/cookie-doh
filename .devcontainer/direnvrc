layout_uv() {
  if [[ ! -f pyproject.toml ]]; then
    log_status 'No pyproject.toml found. Will initialize uv'
    uv init --quiet
  fi

  uv run echo >> /dev/null
  local VENV_BIN_DIR=$(dirname $(uv run which python))
  VIRTUAL_ENV=$(dirname "$VENV_BIN_DIR")

  export UV_ACTIVE=1
  export VIRTUAL_ENV
  PATH_add "$VENV_BIN_DIR"
}
